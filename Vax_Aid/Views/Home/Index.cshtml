@model Vax_Aid.Models.UserViewModel
@{
    ViewData["Title"] = "Home Page";
}


<html>
<head>
    <title>
        VAX_AID
    </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
</head>

<body>
    <link href="~/css/site.css" rel="stylesheet" />
    
    <div class="body-div">
        <div class="vax-form">
            <div class="top-div">
                <img src="~/images/vaccinebottle.png" />

                <h1>
                    Find A Vaccinaton Centre
                </h1>

                <p>
                    Everyone aged 5 and up is eligible for a free COVID-19 immunization.
                    The best approach to discover and book a COVID-19 immunization appointment is to use the VAX AID.
                    Thank you for your patience as we work diligently to schedule appointments.
                </p>
            </div>

            <div class="form-div">
                <form asp-action="SearchNearestLocation" asp-controller="home">
                    <label class="select-vaccination" for="Vaccinationinfo">Choose your Vaccination</label>
                    <select asp-for="VaccineInfoId" class="select-vaccination" asp-items="ViewBag.VaccineInfoId"></select>
                    <label class="select-location" for="Vaccinationinfo">Select location</label>
                    <select required asp-for="AddressId" class="select-location" asp-items="ViewBag.AddressId">
                        <option>Select your location</option>
                    </select>
                    <button type="submit" class="search-button" name="Search">Search</button>
                </form>
            </div>

        </div>
    </div>
</body>
</html>