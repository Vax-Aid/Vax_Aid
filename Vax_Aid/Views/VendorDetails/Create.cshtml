@model Vax_Aid.Models.VendorDetails

@{
    ViewData["Title"] = "Create";
   
}

<h2>Create</h2>

<h4>VendorDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VendorName" class="control-label"></label>
                <input asp-for="VendorName" class="form-control" />
                <span asp-validation-for="VendorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VendorLocationId" class="control-label"></label>
                <select asp-for="VendorLocationId" class ="form-control" asp-items="ViewBag.VendorLocationId"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="VaccineAvailability" /> @Html.DisplayNameFor(model => model.VaccineAvailability)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VaccineInfoId" class="control-label"></label>
                <select asp-for="VaccineInfoId" class ="form-control" asp-items="ViewBag.VaccineInfoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
