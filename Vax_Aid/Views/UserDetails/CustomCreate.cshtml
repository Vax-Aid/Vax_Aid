@model Vax_Aid.ViewModels.UserFormVM

@{
    ViewData["Title"] = "Create";

}

<h2>Create</h2>

<h4>Selected Vaccine: @ViewBag.VaccineName </h4>
<h4>Selected Vaccination Centre: @ViewBag.LocationName </h4>
<h4> Now, Fill Up the Following Details for booking </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="VaccineInfoId" value="@ViewBag.VaccineInfoId" />
            <input type="hidden" name="VendorLocationId" value="@ViewBag.VendorLocationId" />

            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ethnicity" class="control-label"></label>
                <select asp-for="Ethnicity" class="form-control">
                    <option value="NULL" selected>--Select--</option>
                    <option value="Brahmin">Brahmin</option>
                    <option value="Chhetri">Chhetri</option>
                    <option value="Newar">Newar</option>
                    <option value="Rai">Rai</option>
                    <option value="Limbu">Limbu</option>
                    <option value="Magar">Magar</option>
                    <option value="Gurung">Gurung</option>
                    <option value="Tharu">Tharu</option>
                    <option value="Tamang">Tamang</option>
                    <option value="Sherpa">Sherpa</option>
                    <option value="Thakuri">Thakuri</option>
                    <option value="Kami">Kami</option>
                    <option value="Damai">Damai</option>
                    <option value="Sharki">Sharki</option>
                    <option value="Dhimal">Dhimal</option>
                    <option value="Thakali">Thakali</option>
                    <option value="Chepang">Chepang</option>
                    <option value="Raute">Raute</option>
                    <option value="Mushar">Mushar</option>
                    <option value="Others">others</option>
                </select>
                <span asp-validation-for="Ethnicity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="" selected>--Select--</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateofBirth" class="control-label"></label>
                <input asp-for="DateofBirth" class="form-control" />
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressId" class="control-label"></label>
                <select asp-for="AddressId" class="form-control" asp-items="ViewBag.AddressId">
                    <option value="" selected>--Select--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nationality" class="control-label"></label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityType" class="control-label"></label>
                <select asp-for="IdentityType" class="form-control">
                    <option value="" selected>--Select--</option>
                    <option value="Citizenship">Citizenship</option>
                    <option value="Passport">Passport</option>
                    <option value="BirthCertificate">Birth Certificate</option>
                    <option value="VoterID">Voter ID</option>

                </select>
                <span asp-validation-for="IdentityType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdentityNo" class="control-label"></label>
                <input asp-for="IdentityNo" class="form-control" />
                <span asp-validation-for="IdentityNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Occupation" class="control-label"></label>
                <input asp-for="Occupation" class="form-control" />
                <span asp-validation-for="Occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalConditions" class="control-label"></label>
                <input asp-for="MedicalConditions" class="form-control" />
                <span asp-validation-for="MedicalConditions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoseType" class="control-label"></label>
                <select asp-for="DoseType" class="form-control">
                    <option value="" selected>--Select--</option>
                    <option value="First">First</option>
                    <option value="Second">Second</option>
                    <option value="Booster">Booster</option>
                </select>
                <span asp-validation-for="DoseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Disability" /> @Html.DisplayNameFor(model => model.Disability)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

